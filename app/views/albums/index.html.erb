
<div class="title">
  <p>Your Albums</p>
</div>
<div>
    <%= link_to "Create a new album", new_user_album_path(@user), :class => 'btn btn-lg btn-info'  %>
</div>

<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
      <%@user.albums.each do |album|%>
        <div class="table_row">
          <a data-toggle="collapse" data-parent="#accordion" href="#<%= album.title%>">
            <p class="table_left_item"><%= album.title%> - created by <%= album.author%></p>
            <p class="table_right_item"><%= link_to "Edit", edit_user_album_path(@user, album), :class => 'btn btn btn-warning' %>
            <%= link_to "Delete", user_album_path(@user, album),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn  btn-danger' %>
            </p>
          </a>
          <div id="<%= album.title%>" class="panel-collapse collapse">
             <div class="panel-body">
               <p class="table_subitem">
                 <%= album.description%>
               </p>
             </div>
           </div>
         </div>
      <%end%>
      </h4>
    </div>
  </div>
</div>

    

