<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script src="http://code.jquery.com/jquery-1.8.3.js" type="text/javascript"></script>
        <script src="http://getbootstrap.com/2.3.2/assets/js/bootstrap.js" type="text/javascript"></script>
        <link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" type="text/css" rel="stylesheet"> 
  
  
  
  
  
</head>
<body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
  
<div id="user_nav">
  <div class="navbar navbar-fixed-top">  
    <div class="top_bar">  
        <% if user_signed_in? %>
            Signed in as <%= current_user.email %>.
            <strong><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></strong>
        <% else %>
            <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
        <% end %>
            <% if user_signed_in? %>
            <div class="top_menu">
            <div class="top_menu_item"><%= link_to 'Welcome menu', root_url  %> </div>
            <div class="top_menu_item"><%= link_to 'Playlists', user_playlists_path(@user)  %> </div>
            <div class="top_menu_item"><%= link_to 'Albums', user_albums_path(@user)  %> </div>
            </div>
            <%end%>
    </div>
    
  </div>
<div class="subnav_bar"> 
</div>
</div>

<div class="body_container">
    <%= yield %>
  </div>
</div>
<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
</body>
</html>
